<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>
    <style name="MyHoloTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_de</item>
        <item name="colorPrimaryDark">@color/colorTabNormal</item>
        <item name="colorAccent">@color/orange_text_color</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <!-- 灰色横线条 -->
    <style name="generic_gray_line">
        <item name="android:background">#dddddd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <style name="SonicButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/whiter_color</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/sonic_button_round_mask</item>
    </style>

</resources>
