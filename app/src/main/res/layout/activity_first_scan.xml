<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiter_color"
    tools:context="cn.urfresh.logistics.com.urfresh.logistics.activity.FirstScanActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你还未登录，请点击扫一扫\n面对镜头微信即可访问Data数据"
        android:layout_weight="1"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫，看看自己是不是又帅了"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:onClick="onScan"
            android:textColor="@color/whiter_color"
            android:background="@drawable/selector_subject_color_button"/>
    </LinearLayout>

</LinearLayout>
